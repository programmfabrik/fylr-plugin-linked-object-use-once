[
    // special case: group edit with a single id should work
    {
        "name": "POST /api/v1/db/disbkd_objekt [group_edit] | single id, TAN not yet assigned: TAN object must change tag",
        "request": {
            "body": [
                {
                    "_mask": "objektmaske_disbkd__erweitert_betatester_und_admin",
                    "_objecttype": "disbkd_objekt",
                    "disbkd_objekt": {
                        "_pool": {
                            "pool": {
                                "lookup:_id": {
                                    "reference": "system:standard"
                                }
                            }
                        },
                        "_id": [
                            {{ datastore `disbkd_objekt_1_id` }}
                        ],
                        "objektnummer_tan": {
                            "_mask": "disbkd_freieobjekte__all_fields",
                            "_objecttype": "disbkd_freieobjekte",
                            "disbkd_freieobjekte": {
                                "lookup:_id": {
                                    "objektnummer": "0004"
                                }
                            }
                        }
                    }
                }
            ],
            "endpoint": "db/disbkd_objekt",
            "method": "POST",
            "query_params": {
                "format": "long"
            }
        },
        "response": {
            "statuscode": 202,
            "body": {
                "tasks:control": {
                    "no_extra": true,
                    "order_matters": true
                },
                "tasks": [
                    {
                        "buttons": [
                            {
                                "name:control": {
                                    "must_not_exist": true
                                },
                                "value:control": {
                                    "must_not_exist": true
                                }
                            }
                        ]
                    },
                    {
                        "buttons": [
                            {
                                "name": "confirmTransition",
                                "value:control": {
                                    "is_string": true
                                }
                            }
                        ]
                    }
                ]
            }
        },
        "store_response_gjson": {
            "confirm_code": "body.tasks.1.buttons.0.value"
        }
    },
    "@db_post7_confirm.json"
]