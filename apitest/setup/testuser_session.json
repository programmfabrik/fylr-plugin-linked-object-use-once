[
    {{ $accessToken := oauth2_password_token (datastore "oauth2_client") "testuser" "testuser" | marshal | gjson "access_token" | unmarshal }}
    {
        "name": "GET /session for testuser",
        "request": {
            "endpoint": "user/session",
            "method": "GET",
            "header":{
                "Authorization": "Bearer {{ $accessToken }}"
            }
        },
        "store_response_gjson": {
            "maxEventID": "body.current_max_event_id"
        },
        "store": {
            "access_token": "Bearer {{ $accessToken }}"
        },
        "delay_ms": 500,
        "timeout_ms": 5000
    }
]