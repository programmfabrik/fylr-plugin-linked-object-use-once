// special case: group edit with a single id should work
{
    "name": "POST /api/v1/db/disbkd_objekt [group_edit] | single id, TAN not yet assigned: TAN object must change tag - confirm transition",
    "request": {
        "body": [
            {
                "_mask": "objektmaske_disbkd__erweitert_betatester_und_admin",
                "_objecttype": "disbkd_objekt",
                "disbkd_objekt": {
                    "_pool": {
                        "pool": {
                            "lookup:_id": {
                                "reference": "system:standard"
                            }
                        }
                    },
                    "_id": [
                        {{ datastore `disbkd_objekt_1_id` }}
                    ],
                    "objektnummer_tan": {
                        "_mask": "disbkd_freieobjekte__all_fields",
                        "_objecttype": "disbkd_freieobjekte",
                        "disbkd_freieobjekte": {
                            "lookup:_id": {
                                "objektnummer": "0004"
                            }
                        }
                    }
                }
            }
        ],
        "endpoint": "db/disbkd_objekt",
        "method": "POST",
        "query_params": {
        "confirmTransition": {{ datastore `confirm_code` | marshal }},
            "format": "long"
        }
    },
    "response": {
        "statuscode": 200,
        "body": [
            {
                "disbkd_objekt": {
                    "objektnummer_tan": {
                        "_tags:control": {
                            "no_extra": true
                        },
                        "_tags": [
                            {
                                "reference": "assigned"
                            }
                        ],
                        "disbkd_freieobjekte": {}
                    }
                }
            }
        ]
    }
}
